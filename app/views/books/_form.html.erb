
<!-- Form to create new book -->
<div class="form-container">
  <%= form_with(model: @book, local: true) do |form| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      
    <div class="field">
      <%= form.label :picture %>
      <%= form.file_field :picture, accept: "image/png, image/jpg, image/jpeg" %>
    </div>
    <br>
    <div class="form-group">
      <%= form.label :category %>
      <%= form.collection_select(:category_id, @categories, :id, :name, prompt: true, class: "form-control") %>
    </div>
    <br>
    <div class="field">
      <%= form.label "Rent Price (min $5, max $10)" %>
      <%= form.number_field :price, min: 5, max: 10, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :summary %>
      <%= form.text_area :description, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <%= form.fields_for :author do |f| %>
      <div class="first-last-names">
        <div>
          <%= f.label "Author's First Name" %>
          <%= f.text_field :first_name, class: "form-control first-name", autofocus: true, autocomplete: "email" %>
        </div>
        <div>
          <%= f.label "Author's Last Name" %>
          <%= f.text_field :last_name, class: "form-control last-name", autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    <% end %>
    <br>
    <div class="field">
      <%= form.fields_for :publisher do |f| %>
        <%= f.label :publisher %>
        <%= f.text_field :name, class: "form-control", autocomplete: "off" %>
      <% end %>
    </div>
    <br>
    <div class="field">
      <%= form.label :edition %>
      <%= form.number_field :edition, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :pages %>
      <%= form.number_field :pages, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label "Publication date (dd-mm-yyyy)" %>
      <%= form.text_field :date, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :format %>
      <%= form.text_field :format, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="field">
      <%= form.label :quantity %>
      <%= form.number_field :quantity, class: "form-control", autocomplete: "off" %>
    </div>
    <br>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>