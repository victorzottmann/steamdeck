
<% if user_signed_in? && has_role?(:admin) %>
  <div class="container-fluid">
    <h2 class="hero-title text-center m-5">Books</h2>
  </div>

  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Edition</th>
        <th>Format</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.edition %></td>
          <td><%= book.format %></td>
          <td>$<%= book.price %></td>

          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Book', new_book_path %>
  <br><br><br>
  
<% else %>
  <div class="container-fluid">
    <h2 class="hero-title text-center m-5">Access Denied! ‚ùå</h2>
  </div>
<% end %>
