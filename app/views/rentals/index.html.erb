<div class="container-fluid">
  <h2 class="hero-title text-center m-5">Current Rentals</h2>
</div>

<br><br>

<div class="user-books-container">
  <% current_user.rentals.each do |rental| %>
    <div class="card mb-3" style="max-width: 540px;">
      <div class="row no-gutters">
        <div class="col-md-4">
          <%= link_to image_tag rental.book.picture, class: "card-img-top" if rental.book.picture.attached? %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= rental.book.title %></h5>
            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <p class="card-text"><%= link_to "View", book_path(rental.book.id) %> | <%= link_to "Return", rental_path(rental.book.id) %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br><br>