<div class="container-fluid">
  <h2 class="hero-title text-center m-5">Log in</h2>
</div>

<div class="registration-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
    </div>
    <br>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    </div>
    <br>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <br>
    <div class="actions">
      <%= f.submit "Log in", class: " btn btn-md", id: "signup-btn" %>
      <p>OR</p>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-md", id: "login-btn" %>
    </div>
    <br>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
